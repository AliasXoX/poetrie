<nav class="nav">
  <div class="nav-content">
    <%= link_to "Poetrie", root_path, class: "nav-brand" %>
  </div>
</nav>

<div class="container">
  <div class="content-wrapper">
    <div class="auth-container">
      <div class="auth-header">
        <div class="auth-icon">üîê</div>
        <h1 class="auth-title">Welcome Back</h1>
        <p class="auth-subtitle">Sign in</p>
      </div>

      <%= form_with url: login_path, class: "auth-form" do |f| %>
        <% if flash[:alert] %>
          <div class="error-messages">
            <p class="error-item"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :username, class: "field-label" %>
          <%= f.text_field :username, required: true, placeholder: "Enter your username", class: "field-input", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, class: "field-label" %>
          <%= f.password_field :password, required: true, placeholder: "Enter your password", class: "field-input" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign In", class: "auth-submit-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
