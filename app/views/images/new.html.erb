<nav class="nav">
  <div class="nav-content">
    <%= link_to "Poetrie", root_path, class: "nav-brand" %>
    <ul class="nav-links">
      <li><%= link_to "Poems", poems_path, class: "nav-link" %></li>
      <li><%= link_to "Gallery", images_path, class: "nav-link active" %></li>
      <li>
        <%= button_to "Logout", logout_path, method: :delete, class: "nav-link logout-btn", form: { style: "display: inline;" } %>
      </li>
    </ul>
  </div>
</nav>

<div class="container">
  <div class="content-wrapper">
    <div class="form-container">
      <div class="form-header">
        <h1 class="form-title">Upload New Image</h1>
      </div>

      <%= form_for @image, url: images_path do |f| %>
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title, required: true, placeholder: "Enter title..." %>
        </div>

        <div class="field">
          <%= f.label :image_file, "Select Image" %>
          <%= f.file_field :image_file, required: true, direct_upload: true, accept: "image/*" %>
        </div>

        <div class="actions">
          <%= f.submit "Upload" %>
        </div>
      <% end %>
    </div>
  </div>
</div>