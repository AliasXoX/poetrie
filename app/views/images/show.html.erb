<nav class="nav">
  <div class="nav-content">
    <%= link_to "Poetrie", root_path, class: "nav-brand" %>
    <ul class="nav-links">
      <li><%= link_to "Poems", poems_path, class: "nav-link" %></li>
      <li><%= link_to "Gallery", images_path, class: "nav-link active" %></li>
      <li>
        <%= button_to "Logout", logout_path, method: :delete, class: "nav-link logout-btn", form: { style: "display: inline;" } %>
      </li>
    </ul>
  </div>
</nav>

<div class="container">
  <div class="painting-container">
    <div class="painting-header">
      <h1 class="painting-title"><%= @image.title %></h1>
    </div>
    
    <div class="painting-image-wrapper">
      <%= image_tag @image.image_file, alt: @image.title, class: "painting-image" if @image.image_file.attached? %>
    </div>
    
    <div class="painting-info">
      <p><%= @image.created_at.strftime("%B %d, %Y") %></p>
      <div>
        <%= link_to "← Back", :back, class: "painting-back-link" %>
      </div>
    </div>
  </div>
</div>