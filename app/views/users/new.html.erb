<nav class="nav">
  <div class="nav-content">
    <%= link_to "Poetrie", root_path, class: "nav-brand" %>
  </div>
</nav>

<div class="container">
  <div class="content-wrapper">
    <div class="auth-container">
      <div class="auth-header">
        <div class="auth-icon">✒️</div>
        <h1 class="auth-title">Create User</h1>
        <p class="auth-subtitle">Join the Poetrie community</p>
      </div>

      <%= form_with model: @user, local: true, class: "auth-form" do |f| %>
        <% if @user.errors.any? %>
          <div class="error-messages">
            <h3 class="error-title"><%= pluralize(@user.errors.count, "error") %> prohibited this account from being created:</h3>
            <ul class="error-list">
              <% @user.errors.full_messages.each do |message| %>
                <li class="error-item"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :username, class: "field-label" %>
          <%= f.text_field :username, required: true, placeholder: "Choose a username", class: "field-input", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, class: "field-label" %>
          <%= f.password_field :password, required: true, placeholder: "Create a secure password", class: "field-input" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm Password", class: "field-label" %>
          <%= f.password_field :password_confirmation, required: true, placeholder: "Re-enter your password", class: "field-input" %>
        </div>

        <div class="actions">
          <%= f.submit "Create Account", class: "auth-submit-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
